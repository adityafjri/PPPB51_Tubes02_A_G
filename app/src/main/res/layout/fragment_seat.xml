<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeatFragment"
    android:layout_marginVertical="10dp"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/tempat_duduk"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/tv_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/besar"
        android:textSize="25sp"
        android:layout_below="@id/tv_title"
        android:layout_marginHorizontal="28dp"
        android:layout_marginVertical="10dp"
        />
    <View
        android:id="@+id/view_linear"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/tv_size"
        android:layout_marginHorizontal="20dp"/>

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_marginVertical="10dp"
        android:layout_below="@id/view_linear"/>

    <Button
        android:id="@+id/btn_lanjut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/lanjut"
        android:backgroundTint="@color/earth_green"
        android:layout_below="@id/iv_main"
        android:layout_centerHorizontal="true"

        />

</RelativeLayout>